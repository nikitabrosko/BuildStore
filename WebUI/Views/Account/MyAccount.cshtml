    <script>
        $('#nameModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget)
            var name = button.data('name')

            var modal = $(this)
            modal.find('#name-input').val(name)
        })

        $('#emailModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget)
            var email = button.data('email')

            var modal = $(this)
            modal.find('#email-input').val(email)
        })

        $("#change-username-form").validate({
            rules: {
                userName: {
                    required: true,
                    minlength: 2,
                    maxlength: 40
                }
            },
            messages: {
                userName: {
                    required: "Это поле является обязательным!",
                    minlength: "Введите не менее 2 символов!",
                    maxlength: "Введите не более 40 символов!"
                }
            },
            errorElement: "p"
        });

        $("#change-email-form").validate({
            rules: {
                email: {
                    required: true,
                    minlength: 5,
                    maxlength: 50,
                    email: true,
                    regex: "^([a-zA-Z0-9_-]+\\.)*[a-zA-Z0-9_-]+@@[a-z0-9_-]+(\\.[a-z0-9_-]+)*\\.[a-z]{2,6}$"
                }
            },
            messages: {
                email: {
                    required: "Это поле является обязательным!",
                    minlength: "Введите не менее 5 символов!",
                    maxlength: "Введите не более 50 символов!",
                    email: "Введите валидный email!",
                    regex: "Введите валидный email!"
                }
            },
            errorElement: "p"
        });

        $("#change-password-form").validate({
            rules: {
                password: {
                    required: true,
                    minlength: 4,
                    maxlength: 64,
                    regex: "^(?=.*[0-9])(?=.*[a-z])(?=.*[A-Z]).{4,64}$"
                },
                passwordConfirmation: {
                    equalTo: "#Password"
                }
            },
            messages: {
                password: {
                    required: "Это поле является обязательным!",
                    minlength: "Введите не менее 4 символов!",
                    maxlength: "Введите не более 64 символов!",
                    regex: "Введите валидный пароль!"
                },
                passwordConfirmation: {
                    required: "Это поле является обязательным!",
                    equalTo: "Неверный подтверждающий пароль!"
                }
            },
            errorElement: "p"
        });

        checkUserNameRegisterAjax = (form, checkUserNameActionUrl, changeUsernameErrorId) => {
            var username = $('#name-input').val();
            checkUserNameActionUrl = checkUserNameActionUrl.slice(0, -1) + username;

            $.ajax({
                type: 'GET',
                url: checkUserNameActionUrl,

                success: function (res) {
                    if (res === false) {
                        if ($('#name-input-error-second').length > 0) {
                            $('#name-input-error-second').remove();
                        }

                        if ($('#change-username-form').valid()) {
                            form.submit();
                        }
                    } else {
                        console.log(0);
                        if ($('#name-input-error-second').length == 0) {
                            console.log(1);
                            $(changeUsernameErrorId).append('<p class="error" id="name-input-error-second">Данный пользователь уже существует!</p>');
                        }

                        if (!$('#change-username-form').valid()) {
                            $('#change-username-form').trigger('submit');
                        }
                    }
                },

                error: function (err) {
                    console.log(err);
                },

                failure: function (fail) {
                    console.log(fail);
                }
            })
        }
    </script>
</body>
