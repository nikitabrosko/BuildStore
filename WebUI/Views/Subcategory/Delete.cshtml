@model Application.UseCases.Subcategory.Commands.DeleteSubcategory.DeleteSubcategoryCommand

@using (Html.BeginForm("Delete", "Subcategory", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id);

    @if (ViewBag.IsHaveSubcategories)
    {
        <div>
            @Html.Label("Delete all subcategories of this category?")
            @Html.EditorFor(m => m.SubcategoriesDeletion)
        </div>
    }

    <div>
        @Html.Label("Delete all products of this category?")
        @Html.EditorFor(m => m.ProductsDeletion)
    </div>

    <div>
        <input type="submit" value="Save" />
    </div>
}