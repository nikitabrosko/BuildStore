@model Application.UseCases.Subcategory.Commands.DeleteSubcategory.DeleteSubcategoryCommand

@{
    Layout = null;
}

@await Html.PartialAsync("_StylesImportPartial")

<form method="post" asp-action="Delete" asp-controller="Subcategory">

    @Html.HiddenFor(m => m.Id)

    @if (ViewBag.IsHaveSubcategories)
    {
        <div class="form-group">
            @Html.Label("Удалить все подкатегории, относящиеся к этой подкатегории?")
            @Html.EditorFor(m => m.SubcategoriesDeletion, null,
                new
                {
                    htmlAttributes = new
                    {
                        @class = "form-check"
                    }
                })
        </div>
    }

    <div class="form-group">
        @Html.Label("Удалить все товары, относящиеся к этой подкатегории?")
        @Html.EditorFor(m => m.ProductsDeletion, null,
            new
            {
                htmlAttributes = new
                {
                    @class = "form-check"
                }
            })
    </div>

    <div>
        <input type="submit" value="Удалить" class="btn btn-danger" style="width: 100%"/>
    </div>
</form>

@await Html.PartialAsync("_ScriptsImportPartial")
@await Html.PartialAsync("_ValidationScriptsImportPartial")