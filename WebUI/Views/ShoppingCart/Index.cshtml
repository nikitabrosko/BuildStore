									<li>
										<a asp-action="Shop" asp-controller="Home">каталог</a>
										<ul>
											@foreach (var category in Model.Categories)
											{
											<li>
												@Html.ActionLink($"{category.Name}", "Shop", "Category",
                                                                   new GetPaginatedProductsWithSubcategoryQuery { SubcategoryId = category.Id }, new { @class = "mega-title" })
												<ul>
													@foreach (var subcategory in category.Subcategories)
													{
													<li>
														@Html.ActionLink($"{subcategory.Name}", "Shop", "Category",
                                                                   new GetPaginatedProductsWithSubcategoryQuery { SubcategoryId = subcategory.Id })
													</li>
													}
												</ul>
											</li>
											}
										</ul>
									</li>
									<li><a asp-action="Contacts" asp-controller="Home">контакты</a></li>
								</ul>
							</nav>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- mobile-menu-area end -->
	</header>
		<!-- header end -->
		<!-- breadcrumb-area start -->
		<div class="breadcrumb-area">
			<div class="container">
				<div class="row">
					<div class="col-md-12">
						<div class="breadcrumb-list">
							<h1>Корзина</h1>
							<ul>
								<li><a asp-action="Index" asp-controller="Home">Главная страница</a> <span class="divider">|</span></li>
								<li>Корзина</li>
							</ul>							
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- breadcrumb-area end -->
		<!-- cart-main-area start -->
		<div class="cart-main-area">
			<div class="container">
				<div class="row">
					<div class="col-md-12 col-sm-12 col-xs-12">
						<form action="#">				
							<div class="table-content table-responsive">
								<table>
									<thead>
										<tr>
											<th class="product-thumbnail">Фото</th>
											<th class="product-name">Название</th>
											<th class="product-price">Цена</th>
											<th class="product-quantity">Количество</th>
											<th class="product-subtotal">Сумма</th>
											<th class="product-remove">Удалить</th>
										</tr>
									</thead>
									<tbody>
										@{ var counter = 0; }
										@foreach (var productsDictionary in Model.ShoppingCart.ProductsDictionary)
                                        {
                                            counter++;
											var id = $"shopping-cart-product-{counter}";
											<tr id="@id">
												@await Html.PartialAsync("_ProductPartial", new WebUI.Models.ShoppingCart.ModelForProductPartial { ProductsDictionary = productsDictionary, ElementId = id })
											</tr>
										}
									</tbody>
								</table>
							</div>
							<div class="row">
								<div class="col-md-12 col-sm-12 col-xs-12">
									<div class="cart_totals">
										@{ var shoppingCartSum = Model.ShoppingCart.ProductsDictionary.Sum(p => p.Product.Price * p.Count); }
										<h2 id="shopping-cart-total-sum">ИТОГО: BYN @shoppingCartSum</h2>
										<div class="wc-proceed-to-checkout">
											<a asp-action="Checkout" asp-controller="ShoppingCart">Оформить заказ</a>
										</div>
									</div>
								</div>
							</div>
						</form>	
					</div>
				</div>
			</div>
		</div>
