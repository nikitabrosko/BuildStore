		<!-- header start -->
			<header class="header-pos">
		<!-- header-bottom-area start -->
		<div class="header-bottom-area">
			<div class="container">
				<div class="inner-container">
					<div class="row">
						<div class="col-md-2 col-sm-4 col-xs-5">
							<div class="logo">
								<a asp-action="Index" asp-controller="Home"><img src="~/img/logo6.png" alt="" /></a>
							</div>
						</div>
						<div class="col-md-8 hidden-xs hidden-sm">
							<div class="main-menu">
								<nav>
									<ul>
										<li>
											<a asp-action="Index" asp-controller="Home">главная страница</a>
										</li>
										<li><a asp-action="About" asp-controller="Home">о нас</a></li>
										<li class="static">
											<a asp-action="Shop" asp-controller="Home">каталог</a>
											<div class="mega-menu">
												<div class="mega-left">
													@foreach (var category in Model.Categories)
                                                    {
                                                        <span>
                                                        @Html.ActionLink($"{category.Name}", "Shop", "Category",
                                                                   new GetPaginatedProductsWithSubcategoryQuery { SubcategoryId = category.Id }, new { @class = "mega-title" })

                                                        @foreach (var subcategory in category.Subcategories)
                                                        {
                                                            @Html.ActionLink($"{subcategory.Name}", "Shop", "Category",
                                                                   new GetPaginatedProductsWithSubcategoryQuery { SubcategoryId = subcategory.Id })
                                                        }
                                                        </span>
                                                    }
												</div>
											</div>
										</li>
										<li><a asp-action="Contacts" asp-controller="Home">контакты</a></li>
									</ul>
								</nav>
							</div>
						</div>
                        <div class="col-md-2 col-sm-8 col-xs-7 header-right">
                            @if (User.IsInRole("admin"))
                            {
                                <div class="user-meta">
                                    <a href="#"><i class="fa fa-cog"></i></a>
                                    <ul>
                                        <li><a asp-action="Index" asp-controller="Category">Категории</a></li>
                                        <li><a asp-action="Index" asp-controller="Subcategory">Подкатегории</a></li>
                                        <li><a asp-action="Index" asp-controller="Supplier">Поставщики</a></li>
                                        <li><a asp-action="Index" asp-controller="Product">Товары</a></li>
                                        <li><a asp-action="Index" asp-controller="Order">Заказы</a></li>
                                        <li><a asp-action="Index" asp-controller="Role">Роли</a></li>
                                        <li><a asp-action="Index" asp-controller="User">Пользователи</a></li>
                                        <li><a asp-action="Logout" asp-controller="Account">Выйти</a></li>
                                    </ul>
                                </div>
                             }
                            else if (User.Identity.IsAuthenticated)
                            {
                                <div id="shopping-cart">
                                            @await Html.PartialAsync("_ShoppingCartPartial", Model.ShoppingCart)
                                </div>
                                <div class="user-meta">
                                    <a style="cursor:pointer"><i class="fa fa-cog"></i></a>
                                    <ul>
                                        <li><a asp-action="MyAccount" asp-controller="Account">Мой аккаунт</a></li>
                                        <li><a asp-action="Logout" asp-controller="Account">Выйти</a></li>
                                    </ul>
                                </div>
                            }
                            else
                            {
                                <div class="my-cart">
                                    <div class="total-cart">
                                        <a asp-action="Index" asp-controller="Account">
                                            <i class="fa fa-shopping-cart"></i>
                                        </a>
                                    </div>
                                </div>
                                <div class="user-meta">
                                    <a href="#"><i class="fa fa-cog"></i></a>
                                    <ul>
                                        <li><a asp-action="Index" asp-controller="Account">Войти</a></li>
                                    </ul>
                                </div>
                            }
                            <div class="header-search">
                                <i class="fa fa-search"></i>
                                <div class="header-form">
                                    <form asp-action="ShopSearchPost" asp-controller="Home" method="post">
                                        <input type="text" id="searchInput" class="form-control" name="pattern" placeholder="Поиск товаров" />

                                        <button type="submit">
                                            <i class="fa fa-search"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
					</div>
				</div>
			</div>
