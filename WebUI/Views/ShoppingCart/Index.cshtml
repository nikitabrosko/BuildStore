@model Domain.Entities.ShoppingCart

<h3>Shopping cart</h3>

<h5>Products</h5>

<div>
    @foreach (var product in Model.Products)
    {
        <div>
            <p>@product.Name</p>
            <p>@product.Price</p>
            <p>@product.QuantityPerUnit</p>
            @{
                var base64 = Convert.ToBase64String(product.Picture);
                var imgSrc = $"data:image/gif;base64,{base64}";
            }
            <img src="@imgSrc" style="max-width: 300px" alt="@product.Name" />
            
            <a asp-action="RemoveProduct" asp-controller="ShoppingCart" 
               asp-route-id="@product.Id">Remove</a>
        </div>
    }
</div>