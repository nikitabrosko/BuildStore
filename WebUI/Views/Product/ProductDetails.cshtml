                    <!-- widget-categories start -->
                    <aside class="widget widget-categories">
                        <h3 class="sidebar-title">Категории</h3>
                        <ul class="sidebar-menu">
                            @foreach (var category in Model.Categories)
                            {
                                <li>
                                    @Html.ActionLink($"{category.Name}", "Shop", "Category",
                                                                   new GetPaginatedProductsWithSubcategoryQuery
                                                                   {
                                                                       SubcategoryId = category.Id
                                                                   }, new { @class = "category-text" })

                                    @{
                                        var countOfCategoryProducts = 0;

                                        foreach (var subcategory in category.Subcategories)
                                        {
                                            countOfCategoryProducts += subcategory.Products.Count();

                                            @if (subcategory.Subcategories is not null && subcategory.Subcategories.Count > 0)
                                            {
                                                foreach (var subSubcategory in subcategory.Subcategories)
                                                {
                                                    countOfCategoryProducts += subSubcategory.Products.Count();
                                                }
                                            }
                                        }
                                    }

                                    <span>(@countOfCategoryProducts)</span>
                                    <button class="category-expand">+</button>

                                    <ul class="category-ul" style="display: none">
                                        @foreach (var subcategory in category.Subcategories)
                                        {
                                            var countOfSubcategoryProducts = subcategory.Products.Count();

                                            @if (subcategory.Subcategories is not null && subcategory.Subcategories.Count > 0)
                                            {
                                                foreach (var subSubcategory in subcategory.Subcategories)
                                                {
                                                    countOfSubcategoryProducts += subSubcategory.Products.Count();
                                                }
                                            }

                                            <li>
                                                @Html.ActionLink($"{subcategory.Name}", "Shop", "Category",
                                                   new GetPaginatedProductsWithSubcategoryQuery
                                                   {
                                                       SubcategoryId = subcategory.Id
                                                   }, new { @class = "category-text" })
                                                <span>(@countOfSubcategoryProducts)</span>

                                                @if (subcategory.Subcategories is not null && subcategory.Subcategories.Count > 0)
                                                {
                                                    <button class="category-expand">+</button>

                                                    <ul class="category-ul" style="display: none">
                                                        @foreach (var subSubcategory in subcategory.Subcategories)
                                                        {
                                                            var countOfSubSubcategoryProducts = subSubcategory.Products.Count();
                                                            <li>
                                                                @Html.ActionLink($"{subSubcategory.Name}", "Shop", "Category",
                                                                   new GetPaginatedProductsWithSubcategoryQuery
                                                                   {
                                                                       SubcategoryId = subSubcategory.Id
                                                                   }, new { @class = "category-text" })
                                                                <span>(@countOfSubSubcategoryProducts)</span>
                                                            </li>
                                                        }
                                                    </ul>
                                                }
                                            </li>
                                        }
                                    </ul>
                                </li>
                            }
                        </ul>
                    </aside>
                    <!-- widget-categories end -->
                </div>
                <div class="col-md-9">
                    <div class="row">
                        <div class="col-md-4 col-sm-5 col-xs-12">
                            <div class="single-pro-tab-content">
                                <!-- Tab panes -->
                                <div class="tab-content">
                                    @{var counter = 0;}
                                    @foreach (var image in Model.Product.Images)
                                    {
                                        counter++;
                                        if (counter is 1)
                                        {
                                            <div role="tabpanel" class="tab-pane active" id="image-@counter"><a><img src="@ConvertPicture(image.Picture)" alt="@Model.Product.Name" /></a></div>
                                        }
                                        else
                                        {
                                            <div role="tabpanel" class="tab-pane" id="image-@counter"><a><img src="@ConvertPicture(image.Picture)" alt="@Model.Product.Name" /></a></div>
                                        }
                                    }
                                </div>
                                <!-- Nav tabs -->
                                <ul class="single-product-tab" role="tablist">
                                    @{counter = 0;}
                                    @foreach (var image in Model.Product.Images)
                                    {
                                        counter++;
                                        if (counter is 1)
                                        {
                                            <li role="presentation" class="active"><a href="#image-@counter" aria-controls="image-@counter" role="tab" data-toggle="tab"><img src="@ConvertPicture(image.Picture)" alt="@Model.Product.Name" /></a></li>
                                        }
                                        else
                                        {
                                            <li role="presentation"><a href="#image-@counter" aria-controls="image-@counter" role="tab" data-toggle="tab"><img src="@ConvertPicture(image.Picture)" alt="@Model.Product.Name" /></a></li>
                                        }
                                    }
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-7 col-sm-7 col-xs-12 shop-list shop-details">
                            <div class="product-content">
                                <h3><a asp-action="Details" asp-controller="Product" asp-route-id="@Model.Product.Id">@Model.Product.Name</a></h3>
                                <div class="price">
                                    <span>BYN @Model.Product.Price</span>
                                </div>
                                <p>@Model.Product.Description</p>
                                <div class="product-action">
                                    <div class="button-cart">
                                        @if (!User.Identity.IsAuthenticated)
                                        {
                                            <form asp-action="AddProductToShoppingCart" asp-controller="ShoppingCart" method="post" class="cart">
                                                <div class="cart-plus">
                                                    <input hidden name="id" value="@Model.Product.Id" />
                                                    <div class="cart-plus-minus">
                                                        <input name="amount" type="number" value="1" min="1">
                                                        <div class="dec qtybutton">-</div>
                                                        <div class="inc qtybutton">+</div>
                                                    </div>
                                                </div>
                                                <button href="#" data-toggle="modal" data-target="#loginModal" type="button"><i class="fa fa-shopping-cart"></i> Добавить в корзину</button>
                                            </form>
                                        }
                                        else if (!User.IsInRole("admin"))
                                        {
                                            @if (Model.ShoppingCart is not null && Model.ShoppingCart.ProductsDictionary.Any(p => p.Product.Name.Equals(Model.Product.Name)))
                                            {
                                                <form asp-action="AddProductToShoppingCart" asp-controller="ShoppingCart" method="post" class="cart">
                                                    <div class="cart-plus">
                                                        <input hidden name="id" value="@Model.Product.Id" />
                                                        <div class="cart-plus-minus">
                                                            <input name="amount" type="number" value="1" min="1">
                                                            <div class="dec qtybutton">-</div>
                                                            <div class="inc qtybutton">+</div>
                                                        </div>
                                                    </div>
                                                    <button id="modal-add-to-cart-button" type="button" onclick="addToCartAndChangeTextFormModal('#modal-add-to-cart-button', this.form, '#shopping-cart')"><i class="fa fa-shopping-cart"></i> Товар в корзине</button>
                                                </form>
                                            }
