                                                    }

                                                    <li>Вес: @Model.Product.Weight</li>
                                                    <li>Количество на единицу товара: @Model.Product.QuantityPerUnit</li>
                                                </ul>
                                            </div>
                                        </div>
                                        <div role="tabpanel" class="tab-pane" id="page-info">
                                            <div class="product-tab-desc">
                                                <p>@Model.Product.Description</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    @if (Model.RelatedProducts is not null)
                    {
                        <div class="row">
                            <div class="col-md-12">
                                <div class="section-title">
                                    <h2>Товары от того же поставщика</h2>
                                    <div class="title-icon">
                                        <span><i class="fa fa-angle-left"></i> <i class="fa fa-angle-right"></i></span>
                                    </div>
                                </div>
                            </div>
                            <div class="related-curosel">
                                @foreach (var product in Model.RelatedProducts.Skip(1))
                                {
                                    <!-- single-product start -->
                                    <div class="col-md-12">
                                        <div class="single-product">
                                            <div class="product-img">
                                                <a asp-action="Details" asp-controller="Product" asp-route-id="@product.Id">
                                                    <img src="@ConvertPicture(product.Images.First().Picture)" alt="@product.Name" />
                                                    <img class="secondary-img" src="@ConvertPicture(product.Images.Last().Picture)" alt="@product.Name" />
                                                </a>
                                                <div class="product-action" style="max-width:150px" id="product-action-@product.Id">
                                                    @await Html.PartialAsync("_ProductActionsPartial", 
                                                   new WebUI.Models.Product.ModelForProductActionsPartial 
                                                   { 
                                                       ShoppingCart = Model.ShoppingCart, 
                                                       Product = product 
                                                   })
                                                </div>
                                            </div>
                                            <div class="product-content">
                                                <h3><a asp-action="Details" asp-controller="Product" asp-route-id="@product.Id">@product.Name</a></h3>
                                                <div class="price">
                                                    <span>BYN @product.Price</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- single-product end -->
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
