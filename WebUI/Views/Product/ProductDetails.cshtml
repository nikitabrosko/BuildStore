                                        @foreach (var image in Model.Product.Images)
                                        {
                                            counter++;
                                            if (counter is 1)
                                            {
                                                <li role="presentation" class="active"><a href="#image-@counter" aria-controls="image-@counter" role="tab" data-toggle="tab"><img src="@ConvertPicture(image.Picture)" alt="@Model.Product.Name" /></a></li>
                                            }
                                            else
                                            {
                                                <li role="presentation"><a href="#image-@counter" aria-controls="image-@counter" role="tab" data-toggle="tab"><img src="@ConvertPicture(image.Picture)" alt="@Model.Product.Name" /></a></li>
                                            }
                                        }
