                                                            <div class="dec qtybutton">-</div>
                                                            <div class="inc qtybutton">+</div>
                                                        </div>
                                                    </div>
                                                    <button id="modal-add-to-cart-button" type="button" onclick="addToCartAndChangeTextFormModal('#modal-add-to-cart-button', this.form, '#shopping-cart')"><i class="fa fa-shopping-cart"></i> Добавить в корзину</button>
                                                </form>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
