                                                <div class="product-tab-desc">
                                                    <p>@Model.Product.Description</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        @if (Model.RelatedProducts is not null)
