    <script>
        $(document).ready(function () {
            updateProductsHeight();
        })

        addToCartAndChangeText = (elementId, url, shoppingCartId) => {
            jQueryAjaxGet(url, shoppingCartId);
            $(elementId).html('<i class="fa fa-shopping-cart"></i> В корзине')
        }

        addToCartAndChangeTextFormModal = (elementId, form, shoppingCartId) => {
            jQueryAjaxPostForm(form, shoppingCartId);
            $(elementId).html('Товар в корзине')
        }

        $('.category-expand').click(function () {
			var ul = $(this).next('ul');
			var display = ul.css('display');

			if (display == 'block') {
                $(this).text('+');
                ul.css('animation', 'fadeOut 300ms ease-in-out forwards')
                setTimeout(function () { ul.css('display', 'none'); ul.parent().css('border-bottom', '1px groove #999'); }, 300);
            } else {
                $(this).text('-')
                console.log(ul)
                ul.parent().css('border-bottom', 'none');
                ul.css('animation', 'fadeIn 300ms ease-in-out forwards')
                ul.css('display', 'block');
            }
        })

        $('#productModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget)
            var name = button.data('name')
            var price = button.data('price')
            var description = button.data('description')
            var image = button.data('image')
            var id = button.data('id')

            var modal = $(this)
            modal.find('#modal-product-name').text(name)
            modal.find('#modal-product-price').text('BYN ' + price)
            modal.find('#modal-product-description').text(description)
            modal.find('#modal-product-image').attr('src', image)
            modal.find('#modal-product-image').attr('alt', name)
            modal.find('#modal-product-id').val(id)
        })

        function updateProductsHeight() {
            var products = $('.product-content:not(:first)');

            var maxHeight = 0;
            products.each(function () {
                if (($(this).height() + 24) > maxHeight) {
                    maxHeight = ($(this).height() + 24);
                }
            })

            products.each(function () {
                $(this).css('height', maxHeight);
            })
        }
    </script>

    @await Html.PartialAsync("_LoginModalPartial", new Application.UseCases.Identity.User.Queries.LoginUser.LoginUserQuery { ReturnUrl = Url.Action() })
