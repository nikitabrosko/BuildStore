                                    {
                                        counterRelated++;
                                        <!-- single-product start -->
                                        <div class="col-md-12">
                                            <div class="single-product">
                                                <div class="product-img">
                                                    <a asp-action="Details" asp-controller="Product" asp-route-id="@product.Id">
                                                        <img src="@ConvertPicture(product.Images.First().Picture)" alt="@product.Name" />
                                                        <img class="secondary-img" src="@ConvertPicture(product.Images.Last().Picture)" alt="@product.Name" />
                                                    </a>
                                                    <div class="product-action" style="max-width:150px">
                                                        <div class="button-top">
                                                            <a href="#" data-toggle="modal" data-target="#productModal"
                                                               data-name="@product.Name" data-price="@product.Price" data-description="@product.Description"
                                                               data-image="@ConvertPicture(product.Images.First().Picture)" data-id="@product.Id">
                                                                <i class="fa fa-search"></i>
                                                            </a>
                                                        </div>
                                                        <div class="button-cart">
                                                            @if (SignInManager.IsSignedIn(User))
                                                            {
                                                                @if (Model.ShoppingCart is not null && Model.ShoppingCart.ProductsDictionary.Any(p => p.Product.Name.Equals(product.Name)))
                                                                {
                                                                    <button onclick="jQueryAjaxGet('@Url.Action("AddProductToShoppingCart", "ShoppingCart", new { id = product.Id }, Context.Request.Scheme)', '#shopping-cart')">
                                                                        <i class="fa fa-shopping-cart"></i> В корзине
                                                                    </button>
                                                                }
                                                                else
                                                                {
                                                                    var idRelated = $"cart-button-{counterRelated}";
                                                                    <button id="@idRelated" onclick="addToCartAndChangeText('#@idRelated', '@Url.Action("AddProductToShoppingCart", "ShoppingCart", new { id = product.Id }, Context.Request.Scheme)', '#shopping-cart')">
                                                                        <i class="fa fa-shopping-cart"></i> В корзину
                                                                    </button>
                                                                }
                                                            }
                                                            else
                                                            {
                                                                <button href="#" data-toggle="modal" data-target="#loginModal">
                                                                    <i class="fa fa-shopping-cart"></i> В корзину
                                                                </button>
                                                            }

                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="product-content">
                                                    <h3><a asp-action="Details" asp-controller="Product" asp-route-id="@product.Id">@product.Name</a></h3>
                                                    <div class="price">
                                                        <span>BYN @product.Price</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- single-product end -->
                                    }
                                </div>
                            </div>
                        }
                    </div>
				</div>
