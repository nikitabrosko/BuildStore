					<!-- widget-categories start -->
					<aside class="widget widget-categories">
						<h3 class="sidebar-title">Категории</h3>
						<ul class="sidebar-menu">
                            @foreach (var category in Model.Categories)
                            {
                            <li>
                                @Html.ActionLink($"{category.Name}", "Shop", "Category",
                                                               new GetPaginatedProductsWithSubcategoryQuery
                                                               {
                                                                   SubcategoryId = category.Id
                                                               }, new { @class = "category-text" })

                                @{
                                    var countOfCategoryProducts = 0;

                                    foreach (var subcategory in category.Subcategories)
                                    {
                                        countOfCategoryProducts += subcategory.Products.Count();

                                        @if (subcategory.Subcategories is not null && subcategory.Subcategories.Count > 0)
                                        {
                                            foreach (var subSubcategory in subcategory.Subcategories)
                                            {
                                                countOfCategoryProducts += subSubcategory.Products.Count();
                                            }
                                        }
                                    }
                                }

                                <span>(@countOfCategoryProducts)</span>
                                <button class="category-expand">+</button>

                                <ul class="category-ul" style="display: none">
                                    @foreach (var subcategory in category.Subcategories)
                                    {
                                        var countOfSubcategoryProducts = subcategory.Products.Count();

                                        @if (subcategory.Subcategories is not null && subcategory.Subcategories.Count > 0)
                                        {
                                            foreach (var subSubcategory in subcategory.Subcategories)
                                            {
                                                countOfSubcategoryProducts += subSubcategory.Products.Count();
                                            }
                                        }

                                        <li>
                                            @Html.ActionLink($"{subcategory.Name}", "Shop", "Category",
                                               new GetPaginatedProductsWithSubcategoryQuery
                                               {
                                                   SubcategoryId = subcategory.Id
                                               }, new { @class = "category-text" })
                                            <span>(@countOfSubcategoryProducts)</span>

                                            @if (subcategory.Subcategories is not null && subcategory.Subcategories.Count > 0)
                                            {
                                                <button class="category-expand">+</button>

                                                <ul class="category-ul" style="display: none">
                                                    @foreach (var subSubcategory in subcategory.Subcategories)
                                                    {
                                                        var countOfSubSubcategoryProducts = subSubcategory.Products.Count();
                                                        <li>
                                                            @Html.ActionLink($"{subSubcategory.Name}", "Shop", "Category",
                                                               new GetPaginatedProductsWithSubcategoryQuery
                                                               {
                                                                   SubcategoryId = subSubcategory.Id
                                                               }, new { @class = "category-text" })
                                                            <span>(@countOfSubSubcategoryProducts)</span>
                                                        </li>
                                                    }
                                                </ul>
                                            }
                                        </li>
                                    }
                                </ul>
                            </li>
                            }
							</ul>
					</aside>
					<!-- widget-categories end -->
					</div>
