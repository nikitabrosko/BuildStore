                                            {
                                                <form asp-action="AddProductToShoppingCart" asp-controller="ShoppingCart" method="post" class="cart">
                                                    <div class="cart-plus">
                                                        <input hidden name="id" value="@Model.Product.Id" />
                                                        <div class="cart-plus-minus">
