            <div class="modal-content">
                <div class="modal-header">
                    <h3 style="margin: 0;float: left;">Редактирование товара</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
                <div class="modal-body">
                    <div class="input-filed">
                        <form enctype="multipart/form-data" asp-action="Update" asp-controller="Product" method="post" id="update-product-form">
                            <input hidden id="id-input" name="id" />
                            <input hidden id="element-id-input" name="elementId" />
                            <div>
                                <label>Введите новое название</label>
                                <input type="text" id="name-update-input" name="name" placeholder="Штукатурка Cap Arreghini черная" />
                            </div>
                            <div class="order-notes">
                                <label>Введите новое описание</label>
                                <textarea type="text" id="description-update-input" name="description" style="resize:vertical" placeholder="Описание"></textarea>
                            </div>
                            <div>
                                <label>Введите новую цену</label>
                                <input type="text" id="price-update-input" name="price" placeholder="19,90" />
                            </div>
                            <div>
                                <label>Введите новое количество на единицу</label>
                                <input type="text" id="quantity-per-unit-update-input" name="quantityPerUnit" placeholder="1" />
                            </div>
                            <div>
                                <label>Введите новый вес</label>
                                <input type="text" id="weight-update-input" name="weight" placeholder="3" />
                            </div>
                            <div class="pro-size">
                                <select name="supplierId" asp-items="@Model.Suppliers.Select(s => new SelectListItem(s.CompanyName, s.Id.ToString()))">
                                    <option value="@null">Выбрать нового поставщика</option>
                                </select>
                            </div>
                            <div class="pro-size">
                                @{ 
                                    var categories = Model.CategoriesForHeader
                                        .SelectMany(c => c.Subcategories
                                            .Select(s => new SelectListItem(s.Name, s.Id.ToString())))
                                            .Union(Model.CategoriesForHeader
                                                .SelectMany(c => c.Subcategories
                                                    .SelectMany(s => s.Subcategories
                                                        .Select(ss => new SelectListItem(ss.Name, ss.Id.ToString())))));
                                }
                                <select name="categoryId" asp-items="@categories">
                                    <option value="@null">Выбрать новую категорию</option>
                                </select>
                            </div>
                            <div style="display: flex; flex-direction: column; margin-bottom: 20px;">
                                <label>Текущее изображение №1</label>
                                <img id="picture-update-1" />
                            </div>
                            <div>
                                <label>Загрузите новое изображение №1</label>
                                <input type="file" id="picture-update-input-1" name="Pictures" accept="image/*" />
                            </div>
                            <div style="display: flex; flex-direction: column; margin-bottom: 20px;">
                                <label>Текущее изображение №2</label>
                                <img id="picture-update-2" />
                            </div>
                            <div>
                                <label>Загрузите новое изображение №2</label>
                                <input type="file" id="picture-update-input-2" name="Pictures" accept="image/*" />
                            </div>
