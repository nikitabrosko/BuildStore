        });

        $('#updateProductModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget)
            var name = button.data('name')
            var description = button.data('description')
            var price = button.data('price')
            var quantityPerUnit = button.data('quantityperunit')
            var weight = button.data('weight')
            var picture1 = button.data('picture1')
            var picture2 = button.data('picture2')
            var picture3 = button.data('picture3')
            var id = button.data('id')
            var elementId = button.data('elementid')

            var modal = $(this)
            modal.find('#name-update-input').val(name)
            modal.find('#description-update-input').val(description)
            modal.find('#price-update-input').val(price)
            modal.find('#quantity-per-unit-update-input').val(quantityPerUnit)
            modal.find('#weight-update-input').val(weight)
            modal.find('#picture-update-1').attr('src', picture1)
            modal.find('#picture-update-2').attr('src', picture2)
            modal.find('#picture-update-3').attr('src', picture3)
            modal.find('#id-input').val(id)
            modal.find('#element-id-input').val(elementId)
        })

        $('#showAdditionalInfoProductModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget)
            var description = button.data('description')
            var quantityPerUnit = button.data('quantityperunit')
            var weight = button.data('weight')
            var supplier = button.data('supplier')
            var category = button.data('category')
            var picture1 = button.data('picture1')
            var picture2 = button.data('picture2')
            var picture3 = button.data('picture3')

            var supplierId = button.data('id')
            $('#supplier-header-id').text(supplierId)

            var modal = $(this)
            modal.find('#description-show-input').val(description)
            modal.find('#quantity-per-unit-show-input').val(quantityPerUnit)
            modal.find('#weight-show-input').val(weight)
            modal.find('#supplier-show-input').val(supplier)
            modal.find('#category-show-input').val(category)
            modal.find('#picture-show-1').attr('src', picture1)
            modal.find('#picture-show-2').attr('src', picture2)
            modal.find('#picture-show-3').attr('src', picture3)
        })

        jQueryAjaxPostFormForProduct = (form) => {
            $('#submit-button').on('click', function () {
                $(form).valid();
            })

            if ($(form).valid() == true) {
                var modal = $('#updateProductModal')
                var elementId = modal.find('#element-id-input').val()

                $.ajax({
                    type: 'POST',
                    url: form.action,
                    data: new FormData(form),
                    processData: false,
                    contentType: false,

                    success: function (res) {
                        modal.modal('hide');
                        $('#' + elementId).html(res);
                    },

                    error: function (err) {
                        console.log(err);
                    },

                    failure: function (fail) {
                        console.log(fail);
                    }
                })
            }
        }
