    <script>
        $('#updateRoleModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget)
            var name = button.data('name')
            var id = button.data('id')
            var elementId = button.data('elementid')

            var modal = $(this)
            modal.find('#name-update-input').val(name)
            modal.find('#id-input').val(id)
            modal.find('#element-id-input').val(elementId)
        })
        
        jQueryAjaxPostFormForRole = (form) => {
            var modal = $('#updateRoleModal')
            var elementId = modal.find('#element-id-input').val()

            $.ajax({
                type: 'POST',
                url: form.action,
                data: new FormData(form),
                processData: false,
                contentType: false,

                success: function (res) {
                    modal.modal('hide');
                    $('#' + elementId).html(res);
                },

                error: function (err) {
                    console.log(err);
                },

                failure: function (fail) {
                    console.log(fail);
                }
            })
        }
    </script>
