@model IEnumerable<Domain.Entities.Supplier>

<div style="text-align: center; margin: 2%;">
    <button class="btn btn-dark" style="width: 30%;"
            onclick="showInPopup('@Url.Action("Create", "Supplier", null,
                                      Context.Request.Scheme)', 'Создать поставщика')">
        Создать поставщика
    </button>
</div>

<table class="table">
    <thead class="thead-dark">
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Название</th>
        <th scope="col">Редактирование</th>
        <th scope="col">Удаление</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var supplier in Model)
    {
        <tr>
            <th scope="row">
                @supplier.Id
            </th>
            <td>
                <a asp-action="Get" asp-controller="Supplier" asp-route-id="@supplier.Id">@supplier.CompanyName</a>
            </td>
            <td>
                <a onclick="showInPopup('@Url.Action("Update", "Supplier", new {id = supplier.Id},
                                             Context.Request.Scheme)', 'Редактировать поставщика')">Редактировать</a>
            </td>
            <td>
                <a onclick="showInPopup('@Url.Action("Delete", "Supplier", new {id = supplier.Id},
                                             Context.Request.Scheme)', 'Удалить поставщика')">Удалить</a>
            </td>
        </tr>
    }
    </tbody>
</table>