                                <div class="price-box">
                                    <p class="price"><span class="special-price"><span class="amount" id="modal-product-price"></span></span></p>
                                </div>
                                <div class="quick-add-to-cart">
                                    <form asp-action="AddProductToShoppingCart" asp-controller="ShoppingCart" method="post" class="cart">
                                        <input hidden name="id" id="modal-product-id" />
                                        <div class="numbers-row">
