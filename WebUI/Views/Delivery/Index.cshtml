@using Application.UseCases.Delivery.Queries.GetDeliveriesWithPagination
@model Application.Common.Models.PaginatedList<Domain.Entities.Delivery>

<h3>Deliveries</h3>

@foreach (var delivery in Model.Items)
{
<div>
    <p>Id: @delivery.Id</p>
    <p>Type: @delivery.Type</p>
    <p>Fulfilled: @delivery.Fulfilled</p>
    <a asp-action="Get" asp-controller="Order" asp-route-id="@delivery.OrderId"><p>Order id: @delivery.OrderId</p></a>

    @if (Model.Items.Count is 1 && Model.TotalPages > 1)
    {
        <a asp-action="Update" asp-controller="Delivery" asp-route-id="@delivery.Id"
           asp-route-returnUrl="@Url.PageLink(null, null, new {PageNumber = Model.PageNumber - 1, Model.PageSize})">Edit</a>
        <a asp-action="Delete" asp-controller="Delivery" asp-route-id="@delivery.Id"
           asp-route-returnUrl="@Url.PageLink(null, null, new {PageNumber = Model.PageNumber - 1, Model.PageSize})">Delete</a>
    }
    else
    {
        <a asp-action="Update" asp-controller="Delivery" asp-route-id="@delivery.Id"
           asp-route-returnUrl="@Url.PageLink(null, null, new {Model.PageNumber, Model.PageSize})">Edit</a>
        <a asp-action="Delete" asp-controller="Delivery" asp-route-id="@delivery.Id"
           asp-route-returnUrl="@Url.PageLink(null, null, new {Model.PageNumber, Model.PageSize})">Delete</a>
    }
</div>
}

<nav>
    <ul class="pagination justify-content-center">
        @if (Model.HasPreviousPage)
        {
            <li class="page-item">
                @Html.ActionLink("Previous", "Index", "Delivery",
                new GetDeliveriesWithPaginationQuery { PageNumber = Model.PageNumber - 1 },
                new { @class = "page-link" })
            </li>
        }
        else
        {
            <li class="page-item disabled">
                @Html.ActionLink("Previous", "Index", "Delivery",
                new GetDeliveriesWithPaginationQuery { PageNumber = Model.PageNumber - 1 },
                new { @class = "page-link" })
            </li>
        }
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            if (Model.PageNumber.Equals(i))
            {
                <li class="page-item active">
                    @Html.ActionLink($"{i}", "Index", "Delivery",
                    new GetDeliveriesWithPaginationQuery { PageNumber = i },
                    new { @class = "page-link" })
                </li>
            }
            else
            {
                <li class="page-item">
                    @Html.ActionLink($"{i}", "Index", "Delivery",
                    new GetDeliveriesWithPaginationQuery { PageNumber = i },
                    new { @class = "page-link" })
                </li>
            }
        }
        @if (Model.HasNextPage)
        {
            <li class="page-item">
                @Html.ActionLink("Next", "Index", "Delivery",
                new GetDeliveriesWithPaginationQuery { PageNumber = Model.PageNumber + 1 },
                new { @class = "page-link" })
            </li>
        }
        else
        {
            <li class="page-item disabled">
                @Html.ActionLink("Next", "Index", "Delivery",
                new GetDeliveriesWithPaginationQuery { PageNumber = Model.PageNumber + 1 },
                new { @class = "page-link" })
            </li>
        }
    </ul>
</nav>

<div>
    @if (Model.HasPreviousPage)
    {
        @Html.ActionLink("Previous page", "Index", "Delivery",
            new GetDeliveriesWithPaginationQuery { PageNumber = Model.PageNumber - 1 })
    }
    @if (Model.HasNextPage)
    {
        @Html.ActionLink("Next page", "Index", "Delivery",
            new GetDeliveriesWithPaginationQuery { PageNumber = Model.PageNumber + 1 })
    }
</div>