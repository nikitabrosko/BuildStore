@model Application.UseCases.Category.Commands.UpdateCategory.UpdateCategoryCommand

@using (Html.BeginForm("Update", "Category", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(m => m.Id)

    <div>
        @Html.Label("Change Name: ")
        @Html.EditorFor(m => m.Name, new
        {
            htmlAttributes = new
            {
                required = "true",
                maxlength = "50",
                placeholder = "Name",
                type = "text"

            }
        })
    </div>

    <div>
        @Html.Label("Change Description: ")
        @Html.EditorFor(m => m.Description, new
        {
            htmlAttributes = new
            {
                required = "true",
                maxlength = "500",
                placeholder = "Description",
                type = "text"
            }
        })
    </div>

    <div>
        <p>Current Picture:</p>
        <img src="@ViewBag.Picture" style="max-width: 300px" alt="@Model.Name" />
    </div>

    <div>
        @Html.Label("Change Picture: ")
        @Html.EditorFor(m => m.Picture, new
        {
            htmlAttributes = new
            {
                accept = "image/*"
            }
        })
    </div>

    <div>
        <input type="submit" value="Save" />
    </div>
}