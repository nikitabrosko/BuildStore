	<script>
		$('.category-expand').click(function () {
			var ul = $(this).next('ul');
			var display = ul.css('display');

			if (display == 'block') {
				$(this).text('+')
                ul.parent().css('border-bottom', '1px groove #999');
                ul.css('animation', 'fadeOut 300ms ease-in-out forwards')
				setTimeout(function () { ul.css('display', 'none') }, 300);
            } else {
                $(this).text('-')
                ul.parent().css('border-bottom', 'none');
                ul.css('animation', 'fadeIn 300ms ease-in-out forwards')
                ul.css('display', 'block');
            }
		})

        $('#productModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget)
            var name = button.data('name')
            var price = button.data('price')
            var description = button.data('description')
            var image = button.data('image')
            var id = button.data('id')
            var productInCart = button.data('productincart')

            var modal = $(this)
            modal.find('#modal-product-name').text(name)
            modal.find('#modal-product-price').text('BYN ' + price)
            modal.find('#modal-product-description').text(description)
            modal.find('#modal-product-image').attr('src', image)
            modal.find('#modal-product-image').attr('alt', name)
            modal.find('#modal-product-id').val(id)
            
            if (productInCart == 'True') {
                modal.find('#product-modal-form-button').text('Товар в корзине')
            } else {
                modal.find('#product-modal-form-button').text('Добавить в корзину')
            }
		})

		function updateProductsHeight() {
            var products = $('.product-content');
            var half_length = Math.ceil(products.length / 2);
            var leftSideOfProducts = products.slice(0, half_length);

            for (var i = 0; i < leftSideOfProducts.length; i += 3) {

                var array = leftSideOfProducts.slice(i, i + 3);
                var maxHeight = 0;

                array.each(function () {
                    if (($(this).height() + 24) > maxHeight) {
                        maxHeight = ($(this).height() + 24);
                    }
                })

                array.each(function () {
                    $(this).css('height', maxHeight);
                })
            }
        }

		$(document).ready(function () {
            updateProductsHeight();

            $('.category-text.active').parents().each(function () {
                if ($(this).hasClass('category-ul') && $(this).css('display') == 'none') {
                    $(this).css('display', 'block');
                }
            });
		})

        addToCartAndChangeText = (url, shoppingCartId, productActionUrl, productActionFirstId, productActionSecondId) => {
            jQueryAjaxGetAsyncOff(url, shoppingCartId);
            jQueryAjaxGet(productActionUrl, productActionFirstId);
            jQueryAjaxGet(productActionUrl, productActionSecondId);
        }

        addToCartAndChangeTextFormModal = (elementId, form, shoppingCartElementId, productActionUrl, productActionFirstId, productActionSecondId, shoppingCartId, productId) => {
            productActionUrl = productActionUrl + '/' + shoppingCartId + '/' + productId;

            jQueryAjaxPostFormAsyncOff(form, shoppingCartElementId);
            $(elementId).text('Товар в корзине');
            jQueryAjaxGet(productActionUrl, productActionFirstId + productId);
            jQueryAjaxGet(productActionUrl, productActionSecondId + productId);
        }
	</script>

