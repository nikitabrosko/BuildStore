@using Application.UseCases.Product.Queries.SearchPaginatedProductsWithSubcategory;
@model WebUI.Models.Category.ModelForCategoryShop

@{ 
    string ConvertPicture(byte[] picture)
    {
        var base64 = Convert.ToBase64String(picture);
        return $"data:image/jpg;base64,{base64}";
    }

    var returnUrl = string.Empty;

    if (Model.SearchPattern is null)
    {
        returnUrl = Url.Action("Shop", "Category",
            new GetPaginatedProductsWithSubcategoryQuery
            {
                PageSize = Model.ProductsPaginated.PageSize,
                PageNumber = Model.ProductsPaginated.PageNumber,
                SubcategoryId = Model.Category.Id
            });
    }
    else
    {
        returnUrl = Url.Action("ShopSearch", "Category",
            new SearchPaginatedProductsWithSubcategoryQuery
            {
                PageSize = Model.ProductsPaginated.PageSize,
                PageNumber = Model.ProductsPaginated.PageNumber,
                Pattern = Model.SearchPattern,
                SubcategoryId = Model.Category.Id
            });
    }
}

