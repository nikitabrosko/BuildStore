        <script>
            $('#updateCategoryModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget)
                var name = button.data('name')
                var description = button.data('description')
                var picture = button.data('picture')
                var id = button.data('id')
                var elementId = button.data('elementid')

                var modal = $(this)
                modal.find('#name-input').val(name)
                modal.find('#description-input').val(description)
                modal.find('#picture-input').attr('src', picture)
                modal.find('#id-input').val(id)
                modal.find('#element-id-input').val(elementId)
            })

            jQueryAjaxPostFormForCategory = (form) => {
                var modal = $('#updateCategoryModal')
                var elementId = modal.find('#element-id-input').val()

                $.ajax({
                    type: 'POST',
                    url: form.action,
                    data: new FormData(form),
                    processData: false,
                    contentType: false,

                    success: function (res) {
                        modal.modal('hide');
                        $('#' + elementId).html(res);
                    },

                    error: function (err) {
                        console.log(err);
                    },

                    failure: function (fail) {
                        console.log(fail);
                    }
                })
            }
        </script>
