@model Domain.Entities.Order

<h3>Order information</h3>

<div>
    <p>Date: @Model.Date</p>
    <a asp-action="Get" asp-controller="Delivery" asp-route-id="@Model.DeliveryId"><p>Delivery id: @Model.DeliveryId</p></a>
    <a asp-action="Get" asp-controller="Payment" asp-route-id="@Model.PaymentId"><p>Payment id: @Model.PaymentId</p></a>
    <p>Products:</p>

    @foreach (var productsDictionary in Model.ProductsDictionary)
    {
        <a asp-action="Get" asp-controller="Product" asp-route-id="@productsDictionary.Product.Id">
            <p>Id: @productsDictionary.Product.Id</p>
            <p>Count: @productsDictionary.Count</p>
        </a>
    }
</div>